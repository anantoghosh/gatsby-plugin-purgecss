{
  "hooks": {
    "before:init": "yarn build"
  },
  "git": {
    "requireCleaningWorkingDir": true
  },
  "github": {
    "release": true,
    "tokenRef": "RLID"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
